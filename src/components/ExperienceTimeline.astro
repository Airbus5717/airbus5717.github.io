---
import { profile } from '../data/profile';
---

<div class="terminal-stack">
  {profile.experience.map((item, index) => (
    <article class={`terminal-card experience-card stagger-item ${index === 0 ? 'featured-card' : ''}`}>
      <div class="terminal-card-head">
        <div>
          <p class="terminal-line">$ role --current</p>
          <h3 class="entry-title">{item.role}</h3>
          <p class="entry-subtitle">{item.company} | {item.location}</p>
        </div>
        <p class="entry-period">{item.period}</p>
      </div>
      <ul class="entry-list">
        {item.bullets.map((bullet) => (
          <li>{bullet}</li>
        ))}
      </ul>
    </article>
  ))}
</div>
