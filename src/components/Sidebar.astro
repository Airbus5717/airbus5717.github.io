---
const views = [
  { id: 'sys', label: 'SYS', title: 'System' },
  { id: 'ops', label: 'OPS', title: 'Operations' },
  { id: 'proj', label: 'PROJ', title: 'Projects' },
  { id: 'tech', label: 'TECH', title: 'Tech Stack' },
  { id: 'data', label: 'DATA', title: 'Datafiles' }
];
---

<aside class="sidebar" aria-label="Console navigation">
  {views.map((view, i) => (
    <button
      class={`sidebar-item ${i === 0 ? 'active' : ''}`}
      data-view={view.id}
      type="button"
      aria-label={`${view.title} view`}
      title={`${i + 1}: ${view.title}`}
    >
      <span class="sidebar-item-prefix" aria-hidden="true">&gt;</span>
      <span class="sidebar-item-label">{view.label}</span>
      <span class="sidebar-item-title">{view.title}</span>
    </button>
  ))}
</aside>
