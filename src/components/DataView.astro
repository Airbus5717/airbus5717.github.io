---
import { profile } from '../data/profile';
---

<div id="view-data" class="view-panel">
  <p class="view-cmd">$ cat /etc/profile.d/*</p>

  <div class="data-section">
    <div class="data-section-head">[education.conf]</div>
    <div class="data-section-body">
      <table class="kv-table">
        <tbody>
          <tr><td class="kv-key">degree</td><td class="kv-val">{profile.education.degree}</td></tr>
          <tr><td class="kv-key">institution</td><td class="kv-val">{profile.education.institution}</td></tr>
          <tr><td class="kv-key">location</td><td class="kv-val">{profile.education.location}</td></tr>
          <tr><td class="kv-key">period</td><td class="kv-val">{profile.education.period}</td></tr>
          <tr><td class="kv-key">coursework</td><td class="kv-val">{profile.education.coursework}</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="data-section">
    <div class="data-section-head">[publication.conf]</div>
    <div class="data-section-body">
      <table class="kv-table">
        <tbody>
          <tr><td class="kv-key">status</td><td class="kv-val">{profile.publication.status}</td></tr>
          <tr><td class="kv-key">title</td><td class="kv-val">{profile.publication.title}</td></tr>
          <tr><td class="kv-key">venue</td><td class="kv-val">{profile.publication.venue}</td></tr>
          <tr><td class="kv-key">detail</td><td class="kv-val">{profile.publication.detail}</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="data-section">
    <div class="data-section-head">[certification.conf]</div>
    <div class="data-section-body">
      <table class="kv-table">
        <tbody>
          <tr><td class="kv-key">title</td><td class="kv-val">{profile.certification.title}</td></tr>
          <tr><td class="kv-key">issuer</td><td class="kv-val">{profile.certification.issuer}</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="data-section">
    <div class="data-section-head">[volunteering.conf]</div>
    <div class="data-section-body">
      <table class="kv-table">
        <tbody>
          <tr><td class="kv-key">role</td><td class="kv-val">{profile.volunteering.role}</td></tr>
          <tr><td class="kv-key">org</td><td class="kv-val">{profile.volunteering.organization}</td></tr>
          <tr><td class="kv-key">location</td><td class="kv-val">{profile.volunteering.location}</td></tr>
          <tr><td class="kv-key">period</td><td class="kv-val">{profile.volunteering.period}</td></tr>
        </tbody>
      </table>
      <ul class="data-list">
        {profile.volunteering.bullets.map((bullet) => (
          <li>{bullet}</li>
        ))}
      </ul>
    </div>
  </div>

  <div class="data-section">
    <div class="data-section-head">[languages.conf]</div>
    <div class="data-section-body">
      <table class="kv-table">
        <tbody>
          {profile.languages.map((lang) => (
            <tr><td class="kv-key">{lang.name}</td><td class="kv-val">{lang.fluency}</td></tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</div>
