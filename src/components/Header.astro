---
const navItems = [
  { href: '#experience', label: 'Experience' },
  { href: '#projects', label: 'Projects' },
  { href: '#skills', label: 'Skills' },
  { href: '#education', label: 'Education' }
];
---

<header class="sticky top-0 z-50 border-b border-terminal-grid/60 bg-terminal-bg/65 backdrop-blur-xl">
  <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-5 py-3.5 sm:px-8">
    <a href="#top" class="brand text-sm sm:text-base">
      <span class="brand-prompt">root@abdussamad</span>
      <span class="brand-dir">:~/portfolio</span>
      <span class="brand-cursor" aria-hidden="true">_</span>
    </a>

    <button
      id="menuButton"
      class="menu-toggle md:hidden"
      type="button"
      aria-label="Toggle menu"
      aria-controls="mobileMenu"
      aria-expanded="false"
    >
      menu
    </button>

    <nav class="hidden items-center gap-5 text-base md:flex" aria-label="Primary">
      {navItems.map((item) => (
        <a href={item.href} class="nav-link" data-section={item.href.slice(1)}>{item.label}</a>
      ))}
    </nav>
  </div>

  <div id="mobileMenu" class="mobile-menu hidden border-t border-terminal-grid/80 px-5 py-4 sm:px-8 md:hidden">
    <nav class="flex flex-col gap-3.5 text-base" aria-label="Mobile Primary">
      {navItems.map((item) => (
        <a href={item.href} class="mobile-nav-link">{item.label}</a>
      ))}
    </nav>
  </div>
</header>
