---
import { profile } from '../data/profile';
---

<div class="project-grid">
  {profile.projects.map((project, index) => (
    <article class={`terminal-card project-card stagger-item ${index === 0 ? 'featured-card' : ''}`}>
      <div class="terminal-card-head">
        <div>
          <p class="terminal-line">$ project --inspect</p>
          <h3 class="entry-title">{project.name}</h3>
        </div>
        <p class="entry-period">{project.period}</p>
      </div>
      <ul class="entry-list">
        {project.bullets.map((bullet) => (
          <li>{bullet}</li>
        ))}
      </ul>
      {project.link && (
        <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-link">
          open repository
        </a>
      )}
    </article>
  ))}
</div>
