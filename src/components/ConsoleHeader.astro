---
import { profile } from '../data/profile';
---

<header class="console-header">
  <div class="header-left">
    <span>
      <span class="header-prompt">root@abdussamad</span><span class="header-path">:~/profile</span>
      <span class="header-cursor" aria-hidden="true">_</span>
    </span>
  </div>

  <div class="header-right">
    <div class="header-status">
      <span class="online-dot" aria-hidden="true"></span>
      <span>ONLINE</span>
      <span class="header-role">{profile.headline} @ {profile.experience[0].company}</span>
    </div>
    <button
      id="effectsToggle"
      class="effects-toggle"
      type="button"
      aria-pressed="false"
      aria-label="Visual effects intensity: full. Activate to cycle."
    >
      [FX:F]
    </button>
  </div>
</header>
