---
import { profile } from '../data/profile';
---

<div id="view-tech" class="view-panel">
  <p class="view-cmd">$ lsmod</p>
  {profile.skillGroups.map((group) => (
    <div class="tech-group">
      <p class="tech-label">
        {group.label}
        <span class="tech-count">({group.items.length})</span>
      </p>
      <div class="tech-tokens">
        {group.items.map((item) => (
          <span class="skill-token">
            <span class="skill-token-hash" aria-hidden="true">#</span>
            {item}
          </span>
        ))}
      </div>
    </div>
  ))}
</div>
